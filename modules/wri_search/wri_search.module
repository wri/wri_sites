  return [
    'wri_search_menu' => [
      'variables' => [
        'search_nav_title' => '',
        'search_nav_description' => '',
        'search_nav_label' => '',
        'search_nav_id' => '',
        'search_nav_submit' => '',
        'search_nav_destination' => '/search',
      ],
    ],
    'wri_search_results_wrapper' => [
      'variables' => [
        'pager' => [],
        'search_form' => [],
        'search_results' => [],
        'search_results_title' => '',
      ],
    ]
  ];
}
