{# Outline button
 * An outlined pill button.

  * Button OPTIONS (text and outline)
  *   - size: 'sm', 'md' or 'lg

  * ICON OPTION
  *   - link_svg_name: 'download' (pass in svg name)
  *   - svg_position: 'before' (default) or 'after'

  HOW TO USE:
  {% include 'btns/btn-outline.twig' with {
      link: {title: 'learn more', url: '/'},
      size: 'sm'
    }
  %}
#}

{# Primary values #}
{% set link = link %}
{% set size = size ?: 'lg' %}

{# btn classes, colorway, svg name #}
{% set add_classes = add_classes ?? '' %}
{% set btn_classes = 'btn-outline focus-outline btn--' ~ size ~ ' ' ~ add_classes %}

{% set properties = properties ?? [] %}
{# Final set of classes #}
{% set properties = properties|merge({ 'class': (btn_classes) }) %}

{# btn classes, colorway, svg name #}
{% set link_svg_name = link_svg_name %}

{# Adds icon classes if needed#}
{% if link_svg_name %}
  {% set link_svg_classes = ' inline-block ' %}
{% endif %}

{% extends '@ts_wrin/design-system/atoms/btns/btn-base.html.twig' %}
