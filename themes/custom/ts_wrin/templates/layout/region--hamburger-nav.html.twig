{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
    'container',
  ]
%}

<div {{ regionId }}{{ attributes.addClass(classes) }}>
  <div class="hamburger-header">
    <a href="{{ logo_link }}" rel="home" class="site-logo">
      <img class="logo-white" src="{{ footer_logo }}" alt="{{ 'Home'|t }}" />
    </a>
    <div class="donate-menu">{{ drupal_menu('donate') }}</div>
    <button class="mega_menu_close" aria-label="{{ 'Toggle Mega Menu'|t }}" title="{{ 'Close Mega Menu'|t }}">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="#ffffff">
        <path d="M23 20.168l-8.185-8.187 8.185-8.174-2.832-2.807-8.182 8.179-8.176-8.179-2.81 2.81 8.186 8.196-8.186 8.184 2.81 2.81 8.203-8.192 8.18 8.192z"/>
      </svg>
    </button>
  </div>
  <div class="hamburger-content">
    {{ content }}
  </div>
  <div class="hamburger-slider">
    <div class="hamburger-slider-contents">
      <a href="#" class="back">{{ "Back"|t }}</a>
      <ul class="menu"></ul>
    </div>
  </div>
</div>
